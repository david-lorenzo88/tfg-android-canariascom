<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pict_ac"
            android:layout_gravity="center_vertical"
            android:id="@+id/car_detail_attribute_icon"
            />

        <TextView
            android:id="@+id/car_detail_attribute_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:gravity="start"
            android:text="Nombre"
            android:textAlignment="textStart"
            android:textColor="@color/blue_canarias"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/car_detail_attribute_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"

            android:gravity="start"
            android:text="Valor"
            android:textAlignment="textStart"
            android:textColor="@color/theme_accent_1_light"
            android:layout_gravity="center_vertical" />
    </LinearLayout>


</LinearLayout>