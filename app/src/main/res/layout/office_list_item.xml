<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reservationListItemWrapperLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="10dp"
    android:baselineAligned="false"
    android:clickable="false">

    <ImageView
        android:id="@+id/office_list_icon_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:src="@drawable/ic_place_grey600_36dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtOfficeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="3dp"
            android:text="@string/office_name"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtOfficeZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="6dp"
                android:paddingLeft="0dp"
                android:paddingRight="6dp"
                android:paddingTop="6dp"
                android:text="@string/office_zone"
                android:textColor="@color/red_canarias"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtOfficePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txtOfficeZone"
                android:paddingBottom="6dp"
                android:paddingLeft="0dp"
                android:paddingRight="6dp"
                android:paddingTop="6dp"
                android:text="@string/office_phone"
                android:textSize="@dimen/text_size_medium" />




            <ImageView
                android:id="@id/iconSelectOffice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/txtOfficePhone"
                android:src="@drawable/ic_keyboard_arrow_right" />

            <TextView
                android:id="@+id/txtOfficeAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txtOfficePhone"
                android:paddingBottom="6dp"
                android:paddingLeft="0dp"
                android:paddingRight="6dp"
                android:paddingTop="6dp"
                android:text="@string/office_address"
                android:textSize="@dimen/text_size_medium" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>