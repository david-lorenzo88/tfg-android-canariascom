<com.canarias.rentacar.widgets.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/car_detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:id="@+id/scroll_view_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/car_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:minHeight="50dp"
            android:padding="10dp"
            android:scaleType="centerInside" />


        <TextView
            android:id="@+id/car_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/theme_primary_light"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            android:text="Nombre del coche"
            android:textAlignment="center"
            android:textColor="@color/body_text_2_inverse"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_list_detail_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="start"
                android:singleLine="true"
                android:text="@string/category_label"
                android:textAlignment="textStart"
                android:textColor="@color/theme_accent_2"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/car_detail_category_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:gravity="start"
                android:singleLine="true"
                android:text="Turismo"
                android:textAlignment="textStart"
                android:textColor="@color/theme_primary_light"
                android:textSize="@dimen/text_size_small"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_detail_group_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:singleLine="true"
                android:text="@string/group_label"
                android:textAlignment="textStart"
                android:textColor="@color/theme_accent_2"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/car_detail_group_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:gravity="start"
                android:singleLine="true"
                android:text="B"
                android:textAlignment="textStart"
                android:textColor="@color/theme_primary_light"
                android:textSize="@dimen/text_size_small"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/car_detail_sipp_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_detail_sipp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="start"
                android:singleLine="true"
                android:text="@string/sipp_label"
                android:textAlignment="textStart"
                android:textColor="@color/theme_accent_2"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/car_detail_sipp_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:gravity="start"
                android:singleLine="true"
                android:text="BCMB"
                android:textAlignment="textStart"
                android:textColor="@color/theme_primary_light"
                android:textSize="@dimen/text_size_small"

                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/car_detail_attributes_title"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/car_details_attributes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>


</com.canarias.rentacar.widgets.ObservableScrollView>