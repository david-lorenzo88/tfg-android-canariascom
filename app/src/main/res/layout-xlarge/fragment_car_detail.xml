<com.canarias.rentacar.widgets.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/car_detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:id="@+id/scroll_view_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/car_photo"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:minHeight="50dp"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/vw_touran"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:baselineAligned="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/car_list_detail_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/category_label"
                    android:textAlignment="textStart"
                    android:textColor="@color/red_canarias"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/car_detail_category_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:gravity="start"
                    android:singleLine="true"
                    android:text="Turismo"
                    android:textAlignment="textStart"

                    android:textSize="@dimen/text_size_large"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/car_detail_group_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/group_label"
                    android:textAlignment="textStart"
                    android:textColor="@color/red_canarias"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/car_detail_group_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    android:gravity="start"
                    android:singleLine="true"
                    android:text="B"
                    android:textAlignment="textStart"

                    android:textSize="@dimen/text_size_large"

                    />
            </LinearLayout>

                <LinearLayout
                android:id="@+id/car_detail_sipp_wrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/car_detail_sipp_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/sipp_label"
                    android:textAlignment="textStart"
                    android:textColor="@color/red_canarias"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/car_detail_sipp_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:gravity="start"
                    android:singleLine="true"
                    android:text="BCMB"
                    android:textAlignment="textStart"

                    android:textSize="@dimen/text_size_large"

                    />
            </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bookThisCarLayout"
                    android:layout_below="@+id/office_general_info"
                    android:padding="16dp"
                    android:background="@drawable/button_blue_bg"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btnBookThisCar"
                        android:id="@+id/bookThisCarLabel"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bookThisCarIcon"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_keyboard_arrow_right"
                        android:layout_marginLeft="16dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/car_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/red_canarias"
            android:gravity="center"
            android:padding="16dp"
            android:singleLine="true"
            android:text="Nombre del coche"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/car_detail_attributes_title"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/red_canarias"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/car_details_attributes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>


</com.canarias.rentacar.widgets.ObservableScrollView>